{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI - Status Command",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/filter_cli.py",
            "args": ["status"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug CLI - Clone Command",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/filter_cli.py",
            "args": ["clone", "https://github.com/example/repo.git"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug CLI - Help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/filter_cli.py",
            "args": ["--help"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug CLI - Custom Args",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/filter_cli.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "stopOnEntry": false
        }
    ]
}
